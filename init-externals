#!/bin/zsh
#─────────────────────────────────────────────────────────────────
# Install externals sources
#
# AUTHOR:  Ludovic Vigouroux <ludo@mundoludo.fr>
# CREATED: January 2013
#─────────────────────────────────────────────────────────────────

# retrieve this file location
pushd "$(dirname ${0})"
script_location=$(pwd)
popd

# path files will be regenerated by install scripts
paths_file=$HOME/.zshpaths
rm -f $paths_file

plugins_location=$script_location"/install"

# read config command
. $script_location/read-config-safe install $*
for src in $install; do
  $plugins_location/$install $*
done

# vim: set filetype=zsh:
